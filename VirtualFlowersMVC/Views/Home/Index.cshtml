@using Models
@{
    ViewBag.Title = "CS Scraper";
}

<div class="jumbotron">
    <h1>Cs Scraper</h1>
    <p class="lead">The greatest invention since the toaster and the vibrator.</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Team Compare</h2>
        <p>
            Compare cs:go teams statistics.  To make educational bets!.
        </p>
        <p><a class="btn btn-default" href="Home/Compare">Compare &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Teams</h2>
        <p>Find your team!  You have a team?  Well what are you waiting for find it!.</p>
        <p><a class="btn btn-default" href="~/Teams/Index">Teams &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Web Hosting</h2>
        <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
        <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a>
        </p>
    </div>



    @using (Html.BeginForm("NewRank", "Ranks", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Rank</h4>
            <hr/>
            <div class="col-md-5">

                <input type="text" name="url" size="450"/>
          </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <input type="submit" value="Create" class="btn btn-default"/>
                    </div>
                </div>
            </div>
    }

</div>