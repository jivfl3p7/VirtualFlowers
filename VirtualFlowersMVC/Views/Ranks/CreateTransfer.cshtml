@model Models.TransferHistory
@{
    ViewBag.Title = "CreateTransfer";
}

<h2>CreateTransfer</h2>

@using (Html.BeginForm("CreateTransfer", "Ranks", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h4>Create a new transfer.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.TransferDate, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.TransferDate, new { @class = "form-control", type = "date" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewTeamId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NewTeamId, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OldTeamId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.OldTeamId, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register And Scrape" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
